<section class="cart-page mt-5">
    <% if notice %>
        <p id="notice" class="alert alert-warning"><%= notice %></p>
    <% end %>

    <section class="carts">
        <article class="container">
            <h4 class="text-center">Cart items</h4>
        <table style='width:70%; margin: auto' class="mt-3">
            <% @cart.line_items.each do |line_item| %> 
            <tr>
                
                <td><%= line_item.book.title %></td>
                <td><%= number_to_currency(line_item.book.price) %></td>
                <td class="quantity"><%= line_item.quantity %>x</td>
                <td class="price"><%= number_to_currency(line_item.total_price) %></td>
            </tr>
            <% end %> 
            <tfoot>
                <tr>
                    <th colspan="3">Total:</th>
                    <td class="price"><%= number_to_currency(@cart.total_price) %></td>
                </tr>
            </tfoot>
        </table>
        
        <div class="cart-actions">
            <%= button_to 'Empty cart', @cart, method: :delete, class: "btn btn-danger", data: {confirm: 'are you sure?'} %>
            <%= button_to 'checkout', new_order_path, method: :get, class: "btn btn-primary" %>
        </div>

        </article>
    </section>

</section>